{
  "name": "pdf-coordinate-mapper",
  "version": "0.1.0",
  "description": "React component to visually map PDF coordinates to model fields, fill PDFs with data, and download them.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "dependencies": {
    "pdf-lib": "^1.17.1",
    "react-pdf": "^9.2.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "pdf",
    "react",
    "coordinate",
    "mapper",
    "fill",
    "form",
    "pdf-lib",
    "react-pdf"
  ],
  "license": "MIT"
}
